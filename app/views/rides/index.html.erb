<p id="notice"><%= notice %></p>

<h1>Rides</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Location</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Details</th>
      <th>Duration</th>
      <th>Cost</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rides.each do |ride| %>
      <tr>
        <td><%= ride.user_id %></td>
        <td><%= ride.location %></td>
        <td><%= ride.first_name %></td>
        <td><%= ride.last_name %></td>
        <td><%= ride.email %></td>
        <td><%= ride.details %></td>
        <td><%= ride.duration %></td>
        <td><%= ride.cost %></td>
        <td><%= link_to 'Show', ride %></td>
        <td><%= link_to 'Edit', edit_ride_path(ride) %></td>
        <td><%= link_to 'Destroy', ride, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

